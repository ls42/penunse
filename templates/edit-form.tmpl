{{ define "edit-form" }}
{{ template "head" }}

<form action="/save/{{ .ID }}" method="post">
  <div>
    <label for="note">note:</label>
    <input type="text" id="note" name="t_note"
           placeholder="note"
           value="{{ .Note }}">
  </div>
  <div>
    <label for="amount">amount:</label>
    <input type="number" id="amount" name="t_amount"
           placeholder="amount" min="0.10" step="0.10"
           value="{{ .Amount }}">
  </div>
</form>

{{ template "foot" }}
{{ end }}

